<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_myClassSubjectBulletinBoardDetails_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_myClassSubjectBulletinBoardDetails_writeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView_myClassSubjectBulletinBoardDetails_profileImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_toolbar_user"
                    app:civ_border_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_myClassSubjectBulletinBoardDetails_userName"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:text="컴퓨터공학과 19학번 홍길동"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/textView_myClassSubjectBulletinBoardDetails_date"
                    app:layout_constraintEnd_toEndOf="@id/imageView_myClassSubjectBulletinBoardDetails_message"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toEndOf="@id/imageView_myClassSubjectBulletinBoardDetails_profileImg"
                    app:layout_constraintTop_toTopOf="@id/imageView_myClassSubjectBulletinBoardDetails_profileImg"
                    app:layout_constraintWidth_percent="0.6" />

                <ImageView
                    android:id="@+id/imageView_myClassSubjectBulletinBoardDetails_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_my_class_subject_bulletin_board_comment_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textView_myClassSubjectBulletinBoardDetails_userName"
                    app:layout_constraintTop_toTopOf="@id/textView_myClassSubjectBulletinBoardDetails_userName" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="메시지 보내기"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textView_myClassSubjectBulletinBoardDetails_userName"
                    app:layout_constraintTop_toBottomOf="@id/imageView_myClassSubjectBulletinBoardDetails_message" />

                <TextView
                    android:id="@+id/textView_myClassSubjectBulletinBoardDetails_date"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/karla_regular"
                    android:text="21.04.24 23:12"
                    app:layout_constraintBottom_toBottomOf="@id/imageView_myClassSubjectBulletinBoardDetails_profileImg"
                    app:layout_constraintEnd_toEndOf="@id/textView_myClassSubjectBulletinBoardDetails_userName"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintStart_toStartOf="@id/textView_myClassSubjectBulletinBoardDetails_userName"
                    app:layout_constraintTop_toBottomOf="@id/textView_myClassSubjectBulletinBoardDetails_userName" />

                <TextView
                    android:id="@+id/textView_myClassSubjectBulletinBoardDetails_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@id/textView_myClassSubjectBulletinBoardDetails_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_myClassSubjectBulletinBoardDetails_date"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/textView_myClassSubjectBulletinBoardDetails_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/karla_regular"
                    android:text="어떻게 작성하라는지 잘 모르겠어요 ㅠㅠㅠㅠㅠ\n제발 가르쳐 주실분... 깊티 드리겠습니다....
\n레포트 질문은 일절 안할테니까 제발 출석 과제만이라도 도와주실분 부탁드려요 ㅠㅠㅠ\n제발 가르쳐 주실분... 깊티 드리겠습니다....
\n레포트 질문은 일절 안할테니까 제발 출석 과제만이라도 도와주실분 부탁드려요 ㅠㅠㅠ\n제발 가르쳐 주실분... 깊티 드리겠습니다....
\n레포트 질문은 일절 안할테니까 제발 출석 과제만이라도 도와주실분 부탁드려요 ㅠㅠㅠ"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_myClassSubjectBulletinBoardDetails_title"
                    app:layout_constraintWidth_percent="0.9" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_myClassSubjectBulletinBoard_commentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_myClassSubjectBulletinBoardDetails_writeComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.045"
        android:layout_margin="10dp"
        android:background="@drawable/bg_rounded_corner_stroke">

        <EditText
            android:id="@+id/editText_myClassSubjectBulletinBoardWriting_commentContent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:hint="댓글을 입력하세요."
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.86" />

        <ImageView
            android:id="@+id/button_myClassSubjectBulletinBoardWriting_postComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_class_subject_bulletin_board_details_post_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/editText_myClassSubjectBulletinBoardWriting_commentContent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>